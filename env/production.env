# Environment
NODE_ENV=production

# Server
PORT=8081
HOST=0.0.0.0

DB_TYPE=postgres
DB_NAME=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER_NAME=postgres
DB_USER_PASSWORD=example
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Authentication
## SECURE_COOKIE 'false' here for demo-ing. But ideally should be true.
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
JWT_SECRET=xxxxxxxxxxxxxx
COOKIE_SECRET=xxxxxxxxxxxxxx
# expires in 1 hour
COOKIE_EXP=3600000
